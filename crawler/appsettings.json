{
    "ConnectionStrings": {
        "Main": "Server=localhost;User=;Password=;Database="
    },
    "ClientRequesterTcs": { // ClientRequesterTcs.* except InitialRps is able to hot reload
        "InitialRps": 15,
        "DeltaRps": [ 0.01, 0.5 ],
        "LimitRps": [ 1, 1000 ],
        "LogTrace": {
            "Enabled": true,
            "LogIntervalMs": 1000,
            "ResetAfterLog": true
        }
    },
    "CrawlerLocks": {
        "Thread": {
            "RetryAfterSec": 300,
            "ConcurrencyLevel": {
                "Crawling": 10,
                "Failed": 10,
                "NewPage": 5
            },
            "InitialCapacity": {
                "Crawling": 20,
                "Failed": 20,
                "NewPage": 5
            }
        },
        "Reply": {
            "RetryAfterSec": 300,
            "ConcurrencyLevel": {
                "Crawling": 10,
                "Failed": 10,
                "NewPage": 5
            },
            "InitialCapacity": {
                "Crawling": 20,
                "Failed": 20,
                "NewPage": 5
            }
        },
        "SubReply": {
            "RetryAfterSec": 300,
            "ConcurrencyLevel": {
                "Crawling": 10,
                "Failed": 10,
                "NewPage": 5
            },
            "InitialCapacity": {
                "Crawling": 20,
                "Failed": 20,
                "NewPage": 5
            }
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Trace"
        }
    }
}
